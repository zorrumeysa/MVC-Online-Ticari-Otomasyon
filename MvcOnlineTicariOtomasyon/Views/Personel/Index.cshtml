@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Personel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<table class="table table-bordered" style="margin-top:20px">
    <tr>
        <th>ID</th>
        <th>Personel Adı</th>
        <th>Personel Soyadı</th>
        <th>Personel Görseli</th>
        <th>Personel Departmanı</th>
        <th>Güncelle</th>
        <th>Satışlar</th>
    </tr>
    @foreach (var k in Model)
    {

        <tr>
            <td>@k.Personelid</td>
            <td>@k.PersonelAd</td>
            <td>@k.PersonelSoyad</td>
            <td>
                <img src="@k.PersonelGorsel" style="width:150px; height:100px "/>
            </td>
            <td>@k.Departman.DepartmanAd</td>
            <td>
                <a href="/Personel/PersonelGetir/@k.Personelid"
                   class="btn btn-warning" style="background-color:darksalmon">Güncelle</a>
            </td>
            <td>
                <a href="/Departman/DepartmanPersonelSatis/@k.Personelid"
                   class="btn btn-default" style="background-color:lightblue; color:white">Detay</a>
            </td>
        </tr>
    }
</table>
<a href="/Personel/PersonelEkle" class="btn btn-info">Personel Ekle</a>

